// Projeto conversor decimal-binário
//Declaração de variaveis
byte lamp[] = {2,3,4,5,6,7,8,9};
float num;
int num2;

//inicialização das variaveis (vetor ou array)
void setup(){
	for(int i = 0;i <= sizeof(lamp);i++)
		pinMode(lamp[a],OUTPUT);
}
	Serial.begin(9600);
	Serial.println("Porfavor digite um valor:");
